<div class="row animated bounceInUp faster">
  <% @categories.each do |category| %>
    <div class="col-3">
      <div class="card">
        <div class="card-body">
          <h4><%= category.name %></h4>
          <%= link_to "Details", category ,:class=>"btn btn-sm btn-info"%>
        </div>
      </div>
      <br>
    </div>
  <% end %>
  <div class="col-12">
      <% if user_signed_in? %>
    <%= link_to new_category_path do %>
      <button class="btn btn-md btn-success btn-block" style="margin-left: 0">
        <i class="fas fa-plus"></i>
      </button>
    <% end %>
  <% end %>
  </div>
</div>



